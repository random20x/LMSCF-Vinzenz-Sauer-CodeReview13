{% extends 'base.html.twig' %}
{% block body %}
       
<h3 class="text-center my-3"> Admin panel </h3>
  <table class="table table-striped table-bordered admintable">
   <thead>
       <tr>
           <th>#</th>
           <th>Image</th>
           <th>Event</th>
           <th>Location</th>
           <th>Due Date</th>
           <th class="text-warning">Actions</th>
       </tr>
   </thead>
{% for event in events %}
   <tbody>
       <tr>
           <th scope="row">{{event.id}}</th>
           <td><img src="{{event.image}}" alt="thumbnail" class="image-fluid content-fit thumbnail"></td>
           <td>{{event.title}}</td>
           <td>{{event.location}}</td>
           <td>{{event.dueDate|date('F j, Y, g:i a')}}</td>
           <td><a href="/admin/details/{{event.id}}" class="btn btn-sm btn-success"><i class="fas fa-info-circle"></i></a>
           <a href="/admin/edit/{{event.id}}" class="btn btn-sm btn-primary"><i class="fas fa-edit"></i></a>
           <a href="/admin/delete/{{event.id}}" class="btn btn-sm btn-danger"><i class="fas fa-trash-alt"></i></a></td>
       </tr>
{% endfor %}
   </tbody>
   </table>
{% endblock %}